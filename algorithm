import sys
input = sys.stdin.readline
print = sys.stdout.write
sys.setrecursionlimit(10**6)


def dfs(node):
    check[node] = True
    for next in v[node]:
        if not check[next]:
            parent[next] = node
            dfs(next)


n = int(input())
v = [[] for _ in range(n+1)]
check = [False] * (n+1)
parent = [False] * (n+1)
for _ in range(n-1):
    a, b = map(int, input().split())
    v[a].append(b)
    v[b].append(a)

dfs(1)
for i in range(2, n+1):
    print("%d\n" % parent[i])