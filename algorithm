import sys
input = sys.stdin.readline
print = sys.stdout.write

n = int(input())
a = [0] * (n+1)
d = [[0 for _ in range(3)] for _ in range(n+1)]

for i in range(n):
    a[i] = int(input())

d[0][1] = a[0]
for i in range(1, n):
    d[i][0] = max(d[i-1][0], d[i-1][1], d[i-1][2])
    d[i][1] = d[i-1][0] + a[i]
    d[i][2] = d[i-1][1] + a[i]

print("%d\n" % max(d[n-1][0], d[n-1][1], d[n-1][2]))